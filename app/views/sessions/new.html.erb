<div id = "sign-up-form" class="col-md-4 col-md-offset-4 popping-element">

  <%= form_for(:session, url: login_path, html: {class: "form form-horizontal"}) do |f| %>

    <div class="form-group">
      <h3>Sign in to <span class="inline-logo">FOCUS</span></h3>
    </div>
    
    <%= render 'shared/flash' %>
  
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
    </div>
    
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
    </div>
    
    <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-primary" %>
    <p class="not-registered-message">Not registered? <a href="#">Create an account</a></p>
    </div>
  <% end %>
  
    
 
</div>


